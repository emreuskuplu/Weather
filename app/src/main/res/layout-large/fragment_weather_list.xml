<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2EBCF">

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/current_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location_name"
        android:layout_marginTop="20dp"
        android:text="@string/current_weather"
        android:textStyle="italic"
        android:textColor="#B8B8B8"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/weather_temp_degree_layout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/current_text"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/thermometer"
            android:contentDescription="@string/weather_image_is_not_set"
            android:focusable="true"/>

        <TextView
            android:id="@+id/temp_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_gravity="center_vertical"
            android:text="@string/celsius_sign"
            android:textSize="55sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_temp_degree_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:background="@drawable/list_border_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.SearchView
                android:id="@+id/search_list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/refresh_weather_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/refresh"
                android:contentDescription="@string/refresh_locations" />

            <ImageButton
                android:id="@+id/add_location_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_location"
                android:contentDescription="@string/add_locations" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/weather_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:id="@+id/add_bookmark_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description"
        android:text="@string/add_bookmark_info_message"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/query_not_found_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description"
        android:text="@string/bookmark_not_found_message"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/app_info_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline_help"
        android:contentDescription="@string/app_info" />

    <ProgressBar
        android:id="@+id/user_weather_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location_name"
        android:layout_marginTop="80dp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/weather_list_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description"
        android:visibility="gone"/>

</RelativeLayout>