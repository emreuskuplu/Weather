<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detailed_weather_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chevron_left"
        android:layout_width="@dimen/chevron_image_width"
        android:layout_height="@dimen/chevron_image_height"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/chevron_left"
        android:contentDescription="@string/swipe_left"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chevron_right"
        android:layout_width="@dimen/chevron_image_width"
        android:layout_height="@dimen/chevron_image_height"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/chevron_right"
        android:contentDescription="@string/swipe_right"
        android:visibility="gone"/>

</merge>
